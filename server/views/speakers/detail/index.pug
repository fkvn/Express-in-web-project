extends ../../layout/index

block content
  #speakerDetail.container
    .row
      .col-sm-8
        article.speakerslist
          .container
            .row
              .col-sm-8
                h3.speakerslist-title=speaker.title
                h5.speakerslist-name
                  | with 
                  a(href=`/speakers/${speaker.shortname}`) #{speaker.name} Post
                p.speakerslist-info
                  a(href=`/speakers/${speaker.shortname}`)
                  img.speakerslist-img.img-responsive.pull-left(src=`/images/speakers/${speaker.shortname}.jpg` alt=`Photo of ${speaker.name} Post`)
                
                p!=speaker.description

      aside.col-sm-4
        article.sidebar
          include ../../includes/artwork
